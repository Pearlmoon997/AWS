{{>layouts/header}}

<h1>스프링부트 웹서비스</h1>
<div class="col-md-6">
    <div class="row">
        <div class="col-md-6">
            <a href="/posts/save" role="button" class="btn btn-outline-primary">글 등록</a>
            <!-- 로그인 -->
            {{#userName}}
                Logged in as: <span id=""user>{{userName}}</span>
                <a href="/logout" class="btn btn-outline-info active" role="button">Logout</a>
            {{/userName}}
            {{^userName}}
                <button class="btn btn-success" id="googlePopUp">Google Login</button>
<!--                <a href="/oauth2/authorization/google" class="btn btn-outline-success active" role="button">Google Login</a>-->
            {{/userName}}
        </div>
    </div>
    <br>
    <!-- 목록 출력 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>ID</th>
            <th>TITLE</th>
            <th>AUTHOR</th>
            <th>DATE</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
</div>

{{>layouts/footer}}

<script>
    const googleBtn = document.querySelector("#googlePopUp");
    const url = "/oauth2/authorization/google";
    const name = "Google Login";
    googleBtn.addEventListener("click", function() {
        window.open(url, name, "width=500, height=500")
    })
</script>